<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<com.example.abidinflexiblenavdraw.FantasyDrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<com.example.gradientartist.AbidinGradientLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gradientImage"
    app:gradient="@drawable/alpha_gradient"
    app:imagePlaceholder="@drawable/fake"
    app:imageError="@drawable/fake">


</com.example.gradientartist.AbidinGradientLayout>



    <com.example.abidinflexiblenavdraw.SideBar
        android:id="@+id/leftSideBar"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        app:maxTranslationX="66dp">


    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:onClick="onClick"
        android:orientation="vertical">

    <com.example.widget.CircleImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="10dp"
        android:src="@drawable/me"
        app:civ_border_color="@color/menu_text_color"
        app:civ_border_width="2dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elric Brothers"
        android:textColor="@color/menu_text_color"
        android:textSize="18sp"
        />
    </LinearLayout>

    <TextView
        style="@style/MenuText"
        android:drawableLeft="@drawable/circle"
        android:text="Menu 1" />

    <TextView
        style="@style/MenuText"
        android:drawableLeft="@drawable/wallet"
        android:text="Menu 2" />

    <TextView
        style="@style/MenuText"
        android:drawableLeft="@drawable/coupon"
        android:text="Menu 3" />

    <TextView
        style="@style/MenuText"
        android:drawableLeft="@drawable/friends"
        android:text="Menu 4" />

    <TextView
        style="@style/MenuText"
        android:drawableLeft="@drawable/settings"
        android:text="Menu 5" />
    </com.example.abidinflexiblenavdraw.SideBar>

    <com.example.abidinflexiblenavdraw.SideBar
        android:id="@+id/rightSideBar"
        android:layout_width="133dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/bg_right_bar"
        android:gravity="center_vertical|right"
        app:maxTranslationX="-33dp">

    <TextView
        style="@style/MenuText"
        android:text="Menu 6" />

    <TextView
        style="@style/MenuText"
        android:text="Menu 7" />

    <TextView
        style="@style/MenuText"
        android:text="Menu 8" />

    <TextView
        style="@style/MenuText"
        android:text="Menu 9" />

    <TextView
        style="@style/MenuText"
        android:text="Menu 10" />

    <TextView
        style="@style/MenuText"
        android:text="Menu 11" />

    <TextView
        style="@style/MenuText"
        android:text="Menu 12" />
    </com.example.abidinflexiblenavdraw.SideBar>
</com.example.abidinflexiblenavdraw.FantasyDrawerLayout>

    <TextView
        android:id="@+id/tipView"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>